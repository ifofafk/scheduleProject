	@Override
	public void saveWifi(WifiBkDTO wifiBkDTO, User userinfo) throws Exception {
		String xm = wifiBkDTO.getXm();
		String sfzh = wifiBkDTO.getSfzh();
		String mac = wifiBkDTO.getMac();
		String sjh = wifiBkDTO.getSjh();
		String startTime = wifiBkDTO.getStartTime();
		String endTime = wifiBkDTO.getEndTime();
		String rylx = wifiBkDTO.getRylx();
		String yy = wifiBkDTO.getBkyy();
		int jkFlag = wifiBkDTO.getJkFlag();
		String zkno = PubMethod.getUUID("zkno_");

		// 当前用户信息
//		User userinfo = (User) httpSession.getAttribute("userinfo");
		String sqrjh = userinfo.getAccount();// 申请人警号
		String sqrxm = userinfo.getName();// 申请人姓名
		String sqrdwdm = userinfo.getDepartmentCode();// 申请人单位代码
		String sqrdwmc = userinfo.getDepartmentName();// 申请人单位名称
		String userSfzh = userinfo.getYhsfzh();// 申请人身份证号
		String drczno = PubMethod.getUUID("drczno_");

		// ***接收人信息，如果不填默认为当前用户
	
		// 接收人警号
		String jsrjh = wifiBkDTO.getJsrjh();
		if (StringUtils.isBlank(wifiBkDTO.getJsrjh())) {
			jsrjh = userinfo.getAccount();
		} 
		// 接收人姓名
		String jsrxm = wifiBkDTO.getJsrxm();
		if (StringUtils.isBlank(wifiBkDTO.getJsrxm())) {
			jsrxm = userinfo.getName();
		}
		// 接收人手机
		String jsrsjh = wifiBkDTO.getJsrsjh();
		if (StringUtils.isBlank(wifiBkDTO.getJsrsjh())) {
			jsrsjh = userinfo.getSj();
		} 
		
		// 0 保存人员信息表T_ZK_RYXXB
		String stateRyxxb = "0";// 审批状态
		// 薛兰 2017-09-04 如果当前用户是管理员，则状态为1（代表无需审批）
		if (!userinfo.getRoleList().contains("PTYH")) {
			stateRyxxb = "1";// 审批状态
		}
		String sql1 = "insert into T_ZK_RYXXB (zkno,ryxm,Rysfzh,sqrjh,sqrxm,sqrdwdm,sqrdwmc,Ryzkkssj,Ryzkjssj,czsj,state,bkyy,rylx,bklx,mac,rysjh,JKFLAG)"
				+ "values('" + zkno + "','" + xm + "','" + sfzh + "','" + sqrjh + "','" + sqrxm + "','" + sqrdwdm
				+ "','" + sqrdwmc + "','" + startTime + "','" + endTime + "',sysdate,'" + stateRyxxb + "','" + yy
				+ "','" + rylx + "','" + BKLX + "','" + mac + "','" + sjh + "', '"+jkFlag+"')";
		// 1 保存布控人员信息
		String sql2 = "insert into T_ZK_RYXX (RYNO,RYXM,RYSFZH,DRCZNO,DRCZJH,DRCZR,DRCZSJ,DRCZDWDM,ZKNO) " + "values ('"
				+ zkno + "','" + xm + "','" + sfzh + "','" + drczno + "','" + jsrjh + "','" + sqrxm + "',sysdate,'"
				+ sqrdwdm + "','" + zkno + "')";
		// 2
		// 保存人员基本信息params.get("zkno"),params.get("username"),params.get("usercard"),params.get("drczno"),params.get("jsrjh"),params.get("sqrxm"),params.get("sqrdwdm"),params.get("zkno")
		String sql3 = " insert into T_RYJBXX (ZKNO,RYXM,RYSFZH) values ('" + zkno + "','" + sqrxm + "','" + userSfzh
				+ "')";
		// 3 保存信息接收人
		// {params.get("jsrjh"),params.get("jsrxm"),params.get("jsrsj"),params.get("drczno")}
		String sql4 = " insert into T_ZK_XXJSR select SEQ_T_ZK_XXJSR.Nextval,'" + jsrjh + "','" + jsrxm + "','" + jsrsjh
				+ "',t.DRCZNO,t.ZKNO from T_ZK_RYXX t WHERE T.DRCZNO = '" + drczno + "' ";
		
		wifiDao.saveWifi(sql1,true);
		wifiDao.saveWifi(sql2,false);
		wifiDao.saveWifi(sql3,false);
		wifiDao.saveWifi(sql4,false);
		
		//插入烽火数据库，只要是市局管理员以上的权限就不需要审批
		if(userinfo.getSpjb() == 3) {
			InsertDataToFh insertDataToFh = new InsertDataToFh();
			
			insertDataToFh.setTydic_dynamic_id(zkno);//存入智控id
			insertDataToFh.setDispositionCategory(3);//'布控类别(1.人2.机动车3.WIFI)',
			insertDataToFh.setTargetFeature_SFZHM(sfzh);//布控对象特征_人员身份证',
			insertDataToFh.setTargetFeature_XM(xm);//'布控对象特征_人员姓名',
			insertDataToFh.setTargetFeature_MAC(mac);//'布控对象特征_MAC地址'
			
			insertDataToFh.setApplicantName(sqrxm);//申请人姓名
			if(StringUtils.isNotBlank(userinfo.getSj()) && !"null".equals(userinfo.getSj())){
				insertDataToFh.setApplicantInfo(userinfo.getSj()); //'申请人联系方式', 暂时给的是当前用户手机号(疑问，接口用户，sj号为空)
			}
			insertDataToFh.setApplicantOrg(sqrdwmc);//'申请单位'  //是单位名称还是单位代码
			insertDataToFh.setBeginTime(startTime);//'开始时间',
			insertDataToFh.setEndTime(endTime);//'结束时间',
			insertDataToFh.setReceiveMobile(jsrsjh);//'告警信息接收手机号(可填写多个手机号，用分隔符隔开)',
			insertDataToFh.setReason(yy);//'布控原因',
			
			insertDataToFhUtils.insertData(insertDataToFh);
		}
		
		
		
	}

	/**
	 *  批量wifi布控信息表
	 * @param httpSession
	 * @param request
	 * @return
	 */
	@Override
	@Transactional
	public void batchUdpate(User userinfo,String ip,WifiBkBatchSaveDTO wifiBkBatchSaveDTO) throws Exception {
		// 布控人员信息
		String zkrySqlStr = "insert into T_ZK_RYXX (ZKNO,RYXM,RYSFZH,DRCZJH,DRCZR,DRCZDWDM,DRCZNO,IP,RYNO,DRCZSJ) values (?,?,?,?,?,?,?,?,?,";
		// 统一批次DRCZNO，时间需要一致

		// 人员基本信息
		String ryjbxxSqlStr = "insert into T_RYJBXX (ZKNO,RYXM,RYSFZH,SQRDWMC) values (?,?,?,?)";
		
		
		// 申请人单位名称
		String sqrdwmc = userinfo.getDepartmentName();
		String ryzkkssj = wifiBkBatchSaveDTO.getStartTime();
		String ryzkjssj = wifiBkBatchSaveDTO.getEndTime();
		String bkyy = wifiBkBatchSaveDTO.getBkyy();
		String rylx = wifiBkBatchSaveDTO.getRylx();
		int jkFlag = wifiBkBatchSaveDTO.getJkFlag();//调用类型
		String drczno = wifiBkBatchSaveDTO.getDrczno();//统一操作编号
		List<ExcelEntity> list = wifiBkBatchSaveDTO.getSucessList();//excel解析的数据
			
		// 同一批次操作时间
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy/MM/dd HH:mm:ss");
		String drcznoTime = sdf.format(new Date());
		
		String state = "0";//布控状态在点击"申请布控"时修改
		if(userinfo.getRoleList() != null && !userinfo.getRoleList().contains("PTYH")) {
			state = "1";
		}

		// 2 wifi布控
		String zkSqlStr2 = " insert into T_ZK_RYXXB (ZKNO,RYXM,RYSFZH,SQRJH,SQRXM,SQRDWDM,STATE,BKLX,RYSJH,MAC,SQRDWMC,JKFLAG,RYZKKSSJ,RYZKJSSJ,BKYY,RYLX,CZSJ) values (?,?,?,?,?,?,'" +state+ "','2',?,?,?,'" +jkFlag+ "',?,?,?,?,sysdate) ";
		
		try {
			for (ExcelEntity excelData : list) {
				// 智控编号
				String zkno = excelData.getZkno();
				// 人员编号
				String ryno = PubMethod.getUUID("ryno_");

				// 人员手机号
				String rysjh = excelData.getRysjh();
				// mac地址
				String mac = excelData.getMac();

				// 插入参数
				String[] wifiParam = getAddParam(excelData, userinfo, zkno);

				// 智控参数
				String[] zkParam = StringUtil.mergeArray(wifiParam, new String[] { rysjh, mac, sqrdwmc,ryzkkssj,ryzkjssj,bkyy,rylx });
				// 智控人员信息参数
				String[] zkryParam = StringUtil.mergeArray(wifiParam, new String[] { drczno, ip, ryno });
				// 人员基本信息
				String[] ryjbxxParam = getAddRyjbxxParam(excelData, userinfo, zkno);

				// 插入布控信息表
				rybkDao.update(zkSqlStr2, zkParam, new int[] { Types.VARCHAR, Types.VARCHAR, Types.VARCHAR,Types.VARCHAR, Types.VARCHAR, 
						Types.VARCHAR, Types.VARCHAR, Types.VARCHAR, Types.VARCHAR,Types.VARCHAR, Types.VARCHAR, Types.VARCHAR, Types.VARCHAR });
				// 插入布控人员信息表
				rybkDao.update(zkrySqlStr + "to_date('" + drcznoTime + "','yyyy/MM/dd hh24:mi:ss'))", zkryParam,
						new int[] { Types.VARCHAR, Types.VARCHAR, Types.VARCHAR, Types.VARCHAR,
								Types.VARCHAR, Types.VARCHAR, Types.VARCHAR, Types.VARCHAR,
								Types.VARCHAR });
				// 插入人员基本信息表
				rybkDao.update(ryjbxxSqlStr, ryjbxxParam,
						new int[] { Types.VARCHAR, Types.VARCHAR, Types.VARCHAR, Types.VARCHAR });
			}
			// 插入当前批量提交布控人员信息的操作人员到接收人信息表中
			String[] paramArray = getCzryParam(wifiBkBatchSaveDTO, userinfo);
			int[] typeCzry = new int[]{Types.VARCHAR,Types.VARCHAR,Types.VARCHAR,Types.VARCHAR};
			//批量插入信息接收人
			String insertXxjsrSqlStr = " insert into T_ZK_XXJSR select SEQ_T_ZK_XXJSR.Nextval,?,?,?,T.DRCZNO,T.ZKNO from T_ZK_RYXX t WHERE T.DRCZNO = ?";
			//批量插入接收人
			rybkDao.update(insertXxjsrSqlStr, paramArray, typeCzry);
			
			//插入烽火数据库执行出错只要是接口调用就不需要审批. 已经布控的插入烽火库
			if("1".equals(state)) {
				insertDataToFhUtils.insertFhDB(drczno, 3, userinfo);
			}
			
			// 插入中间库，供第三方单位调用
			wifiDao.add(INSERT_ZK_WIFI_BK, new String[] { wifiBkBatchSaveDTO.getDrczno() }, new int[] { Types.VARCHAR });
			
			
		} catch (Exception sqle) {
			throw new ServiceException("false","执行错误，请与系统管理员联系！");
		}
		


	}

	/**
	 * 批量更新人员智控信息的参数
	 * 王晨
	 * @param request
	 * @return
	 */
	@Override
	public String[] zkjbxxParam(WifiBkDTO wifiBkDTO) {
		// 人员智控开始时间
		String ryzkkssj = wifiBkDTO.getStartTime();
		// 人员结束开始时间
		String ryzkjssj = wifiBkDTO.getEndTime();
		// 布控原因
		String bkyy = wifiBkDTO.getBkyy();
		// 人员类型
		String rylx = wifiBkDTO.getRylx();
		// 导入操作编号
		String drczno = wifiBkDTO.getDrczno();

		String[] param = new String[] { ryzkkssj, ryzkjssj, bkyy, rylx, drczno };
		return param;
	}

	/**
	 * 批量插入信息接收人的参数组装
	 * 王晨
	 * @param request
	 * @return
	 */
	@Override
	public String[] getCzryParam(WifiBkBatchSaveDTO wifiBkBatchSaveDTO,User userinfo) {
		
		// 导入操作编号
		String drczno = wifiBkBatchSaveDTO.getDrczno();
		

		// 接收人警号
		String jsrjh = userinfo.getAccount();
		if (StringUtils.isNotBlank(wifiBkBatchSaveDTO.getJsrjh())) {
			jsrjh = wifiBkBatchSaveDTO.getJsrjh();
		}
		// 接收人姓名
		String jsrxm = userinfo.getName();
		if (StringUtils.isNotBlank(wifiBkBatchSaveDTO.getJsrxm())) {
			jsrxm = wifiBkBatchSaveDTO.getJsrxm();
		}
		// 接收人手机
		String jsrsj = userinfo.getSj();
		if (StringUtils.isNotBlank(wifiBkBatchSaveDTO.getJsrsjh())) {
			jsrsj = wifiBkBatchSaveDTO.getJsrsjh();
		}
		String[] params = new String[] { jsrjh, jsrxm, jsrsj, drczno };
		return params;
	}
	
	
	/**
	 * 获取参数--批量布控使用
	 * 
	 * @param excelData
	 * @param userinfo
	 * @param zkno
	 * @return
	 * @throws Exception
	 */
	private String[] getAddParam(ExcelEntity excelData, User userinfo, String zkno) {
		// 人员姓名
		String ryxm = excelData.getRyxm();
		// 人员身份证号
		String rysfzh = excelData.getRysfzh();

		// 申请人警号
		String sqrjh = userinfo.getAccount();
		// 申请人姓名
		String sqrxm = userinfo.getName();
		// 申请人单位代码
		String sqrdwdm = userinfo.getDepartmentCode();
		
		// 参数数组
		String[] param = new String[] { zkno, ryxm, rysfzh, sqrjh, sqrxm, sqrdwdm };
		return param;
	}
	
	/**
	 * 获取人员基本信息参数数组-批量布控使用
	 * 
	 * @param domain
	 * @param userinfo
	 * @param zkno
	 * @return
	 * @throws Exception
	 */
	private String[] getAddRyjbxxParam(ExcelEntity excelData, User userinfo, String zkno) {

		// 人员姓名
		String ryxm = excelData.getRyxm();
		// 人员身份证号
		String rysfzh = excelData.getRysfzh();
		// 申请人单位名称
		String sqrdwmc = userinfo.getDepartmentName();
		// 参数数组
		String[] param = new String[] { zkno, ryxm, rysfzh, sqrdwmc };
		return param;
	}

